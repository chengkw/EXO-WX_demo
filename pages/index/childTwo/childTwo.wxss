page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.box{
  width: 100%;
  height: 100%;
  overflow: auto;
  background: rgba(120, 200, 180, 1);
  padding: 0 0 30rpx 0;
  position: relative
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.head{
  display: block;
  width: 100%;
  text-align: center;
  font-weight: bolder;
  font-size: 50rpx;
  padding: 30rpx 0;
  color: #000;
  text-shadow:2px 2px 5px darkcyan,-2px 2px 5px darkturquoise; 
}
.bodybox{
  opacity: 0;
  padding: 0 40rpx;
  transition: all 2s;
}
.fbodybox{
  opacity: 1;
  padding: 0 40rpx;
  transition: all 2s;
}
