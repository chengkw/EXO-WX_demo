page{
  /* width: 100%; */
  height: 100%;
  /* background: #eee; */
  display: flex;
  overflow: hidden;
  position: relative;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  background: transparent;
}
.beijing{
  width: 100%;
  height: 100%;
  position:absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.beijingImg{
  width: 100%;
  height: 100%;
  background-size: cover;
}
.fbeijingImg{
  display: none;
}
.box{
  width: 100%;
  background: rgba(250, 250, 250, 0.4);
  overflow: hidden;
}
.box:hover .topbox{
  height: 0;
   opacity: 0;  
}
 .box:hover .bottombox{
  margin-top: 143%;
   opacity: 0; 
}
.box:hover .body{
  display: block;
}
.topbox{
  overflow: hidden;
  height: 50%;
  background:rgba(0, 0, 0, 1);
  flex-direction: row;
  text-align: center; 
  position: relative;
  transition: all 2s;
  z-index: 2;
}
.topimg{
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  position: absolute;
  left: 25%;
  bottom: -198rpx;
  box-shadow: 0 0 5rpx #fff;
}
.bottombox{
  overflow: hidden;
  height: 50%;
  background:rgba(0, 0, 0, 1);
  flex-direction: row;
  text-align: center;
  position: relative;
  transition: all 2s;
  z-index: 2;
}
.bottomimg{
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  position: absolute;
  top: -198rpx;
  left: 25%;
  box-shadow: 0 0 5rpx #fff;
}
.body{
  padding: 0 30rpx;
  display: none;
  position: absolute;
  transition: all 2s;
  top: 0;
  height: 100%;
  overflow-y: auto; 
  overflow:scroll; 
}
.title{
  font-size: 50rpx;
}
.ttext{
  font-size: 30rpx;
  padding:0;
}
text{
  display: block;
  padding-top: 30rpx;
  font-size: 30rpx;
  color: #444;
}
.chakan{
  text-align: center;
  padding: 20rpx 0;
  color: #000;
}
.fchakan{
  display: none;
}
.jiazai{
  display: none;
}
.fjiazai{
  display: block;
}
button{
  border: 0;
  font-size: 30rpx;
}
.boxTwo{
  width: 100%;
  padding: 20rpx 0;
}
.boxTwo image{
  width: 100%;
  height: 400rpx;
}
.titleTwo{
  color: #000;
  font-size: 40rpx;
}
.chakanTwo{
  display: block;
  text-align: center;
}
.fchaknaThree{
  display: none;
}
.boxThree{
  display: none;
}
.fboxThree{
  display: block;
  padding:0 0 20rpx 0;
}
.fboxThree image{
  width: 100%;
  height: 400rpx;
}
